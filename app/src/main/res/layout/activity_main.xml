<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="com.example.ho.login.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#0e33ea"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_person_add_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ID 입력"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
            android:drawablePadding="10dp"
            android:background="#747d9bef"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="PW 입력"
            android:gravity="left|center"
            android:drawableLeft="@drawable/ic_forward_black_24dp"
            android:drawablePadding="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>
